$(function() {
  // Hide the ID input by default
  $('#name').hide();

  // Listen for changes to the display toggle switch
  $('#display-toggle').change(function() {
    if ($(this).is(':checked')) {
      // If the switch is on, show the display name input and hide the ID input
      $('#customerId').show();
      $('#name').hide();
    } else {
      // If the switch is off, show the ID input and hide the display name input
      $('#name').show();
      $('#customerId').hide();
    }
  });
});

$(function() {
  // Hide the ID input by default
  $('#name').hide();

  // Listen for changes to the name/id toggle radio buttons
  $('input[name="name-id-toggle"]').change(function() {
    if ($(this).val() === 'name') {
      // If the "name" radio button is selected, show the display name input and hide the ID input
       $('#customerId').show();
      $('#name').hide();
    } else {
      // If the "id" radio button is selected, show the ID input and hide the display name input
     $('#name').show();
      $('#customerId').hide();
    }
  });
});
