	<script>
		
		let currentForm = null;

  function openDenominationModal(button) {
    currentForm = button.closest("form");
    document.getElementById("denominationModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("denominationModal").style.display = "none";
  }

  function submitWithDenomination() {
    if (!currentForm) return;

    const formData = new FormData(currentForm);
    
    // Get denomination values
    ['note2000','note500','note200','note100','note50','note20','note10','note5','note2','note1'].forEach(note => {
      const value = document.getElementById(note).value || 0;
      formData.append(note, value);
    });

    // Submit via Fetch API or create a dynamic form
    fetch(currentForm.action, {
      method: currentForm.method,
      body: formData,
      target: currentForm.target
    })
    .then(response => response.text())
    .then(responseText => {
      alert("Data saved successfully.");
      closeModal();
    })
    .catch(error => {
      alert("Error saving data.");
      console.error(error);
    });
  }
		
		
	</script>

