<script>
    document.getElementById("denominationForm").addEventListener("submit", function (event) {
        const selectedType = document.querySelector('input[name="type"]:checked').value;
        if (selectedType === "collection") {
            this.action = "/myapp/getDenominationInfo"; // Existing API
        } else if (selectedType === "return") {
            this.action = "/myapp/getReturnDenominationInfo"; // Another API (change this as needed)
        }
    });
</script>



